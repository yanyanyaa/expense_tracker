<div class="container" style="text-align: center;">
  <div class="category-list">
  <div class="sort-bar d-flex justify-content-end mt-3">
    <div class="dropdown mt-4">
      <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown"
        aria-expanded="false">
        支出類別
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
        <li><a class="dropdown-item" href="/">不分類</a></li>
        <li><a class="dropdown-item" href="/sort/household">家居物業</a></li>
        <li><a class="dropdown-item" href="/sort/fare">交通出行</a></li>
        <li><a class="dropdown-item" href="/sort/entertainment">休閒娛樂</a></li>
        <li><a class="dropdown-item" href="/sort/food">餐飲食品</a></li>
        <li><a class="dropdown-item" href="/sort/other">其它</a></li>
      </ul>
    </div>
  </div>


  </div>

  <div class="total">
    <h4 style="display: inline;">總金額：</h4>
    <h1 style="display: inline;">{{ totalAmount }}</h1>
  </div>

  <div class="record-list">
    <ul class="list-group mt-5">

      {{#each records}}
      <li class="list-group-item m-0">
        <div class="row align-items-center">
          <div class="col-auto me-auto d-flex">
            <div class="icon mx-3">
              <i class="{{ this.categoryId.icon }}"></i>
            </div>
            <h5 class="mx-3">{{ this.name }}</h5>
            <p class="mx-3">{{ this.date }}</p>
          </div>
          <div class="col-auto">
            <h5 class="mx-3" style="display: inline;">{{ this.amount }}</h5>
            <a class="btn text-light" href="/records/{{ this._id }}/edit" style="background-color:#82a9c9">修改</a>
            <form action="/records/{{ this._id }}?_method=DELETE" method="post" style="display: inline;">
              <button class="btn text-light" type="submit" style="background-color:#c98888">刪除</button>
            </form>
          </div>
        </div>
      </li>
      {{/each}}

    </ul>
    <a class="btn text-light mt-3" href="/records/new" style="background-color:#da9050">新增</a>
  </div>
</div>

